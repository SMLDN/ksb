{% extends "partial/MainLayout.twig" %}

{% block title %}
    {{ user.userName }}
{% endblock %}

{% block section %}
    <h1>Me</h1>

    {% if userRaw.sheets %}
        {% for sheet in userRaw.sheets %}
            <p>
                {{ sheet.title }}
            </p>
            <a href="{{ urlFor('me.sheet.edit', { 'userIdBased': toBase(user.id), 'slug': sheet.slug }) }}">Edit</a>
            <a href="{{ urlFor('user.sheet.view', { 'userIdBased': toBase(user.id), 'slug': sheet.slug }) }}">View</a>
        {% endfor %}
    {% endif %}

    <div>
        <a href="{{ urlFor('home') }}">Home</a>
    </div>
{% endblock %}
