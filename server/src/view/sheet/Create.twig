{% extends "partial/MainLayout.twig" %}

{% block title %}
    Create Sheet
{% endblock %}

{% block section %}
    <h1>Create Sheet</h1>

    <form accept-charset="UTF-8" action="{{ urlFor('me.sheet.create') }}" method="post" enctype="multipart/form-data">
        <div>
            <label for="title">Title</label>
        </div>
        <input id="title" name="title"/>

        <div>
            <label for="title">Content</label>
        </div>
        <textarea cols="100" id="content" name="content" rows="20"></textarea>

        <div>
            <label for="tag">Tags</label>
        </div>
        <input id="tag" name="tag" type="text">

        <div>
            <label for="attach-content">Image File</label>
        </div>
        <input id="attach-content" name="attach-content" type="file">

        <div>
            <input type="submit" value="Đăng bài">
        </div>
        {% include "partial/CsrfForm.twig" %}
    </form>
    <a href="{{ urlFor('home') }}">Home</a>
{% endblock %}
